# ------------------------------------------------------------------
# CONFIGURATION CLOUD (.env.example)
# Copiez ce fichier en ".env" et remplacez les valeurs entre <...>
# ------------------------------------------------------------------

PORT=3000

# ==========================================
# 1. MONGODB ATLAS (CLOUD)
# ==========================================
# Remplacez <USER> et <PASSWORD> par vos identifiants Atlas
# Note : La base de données ciblée est "gymfit"
MONGODB_URI=mongodb+srv://<USER>:<PASSWORD>@cluster0.suvhhik.mongodb.net/gymfit?appName=Cluster0


# ==========================================
# 2. SUPABASE POSTGRESQL (CLOUD)
# ==========================================
# Ces informations se trouvent dans Settings > Database
PGHOST=db.udnqykrlncewicjetgvy.supabase.co
PGUSER=postgres
PGDATABASE=postgres
PGPORT=5432

# ⚠️ IMPORTANT : C'est le mot de passe défini à la création du projet Supabase.
# Ce n'est PAS la clé API.
PGPASSWORD=<VOTRE_MOT_DE_PASSE_DB_SUPABASE>


# ==========================================
# 3. SUPABASE API
# ==========================================
# Settings > API
SUPABASE_URL=https://udnqykrlncewicjetgvy.supabase.co

# Utilisez la clé "service_role" (secret) pour le backend Express
SUPABASE_KEY=<VOTRE_CLE_SERVICE_ROLE_ICI>


# ==========================================
# 4. SÉCURITÉ & JWT
# ==========================================
# Générez des chaînes aléatoires longues pour la prod
JWT_ACCESS_SECRET=changer_cette_valeur_secrete
JWT_REFRESH_SECRET=changer_cette_valeur_secrete

BCRYPT_SALT_ROUNDS=10
BCRYPT_PEPPER=changer_cette_valeur_secrete


# ==========================================
# 5. CONFIGURATION APP
# ==========================================
NODE_ENV=DEVELOPMENT
USE_HTTPS=true
USE_REFRESH_COOKIE=true


# ==========================================
# 6. MAINTENANCE
# ==========================================
DB_RESET_KEY=<DEFINIR_UNE_CLE_POUR_RESET>
DB_INIT_KEY=<DEFINIR_UNE_CLE_POUR_INIT>