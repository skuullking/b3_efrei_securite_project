  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": ["console.log('Making request to: ' + pm.request.url);"]
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Tests automatiques pour les r√©ponses",
          "pm.test(\"Status code is 200\", function () {",
          "    pm.response.to.have.status(200);",
          "});",
          "",
          "// Pour les r√©ponses de succ√®s",
          "if (pm.response.code === 200 || pm.response.code === 201) {",
          "    pm.test(\"Response has JSON body\", function () {",
          "        pm.response.to.be.json;",
          "    });",
          "}",
          "",
          "// Pour l'authentification - sauvegarder les tokens",
          "if (pm.response.code === 200 && pm.request.url.toString().includes('/auth/login')) {",
          "    var jsonData = pm.response.json();",
          "    pm.collectionVariables.set(\"accessToken\", jsonData.tokens.accessToken);",
          "    pm.collectionVariables.set(\"refreshToken\", jsonData.tokens.refreshToken);",
          "    pm.collectionVariables.set(\"userId\", jsonData.user.id);",
          "    ",
          "    pm.test(\"Tokens saved successfully\", function () {",
          "        pm.expect(jsonData.tokens.accessToken).to.not.be.empty;",
          "        pm.expect(jsonData.tokens.refreshToken).to.not.be.empty;",
          "    });",
          "}",
          "",
          "// Pour la cr√©ation d'exercices - sauvegarder l'ID",
          "if (pm.response.code === 201 && pm.request.url.toString().includes('/exercises')) {",
          "    var jsonData = pm.response.json();",
          "    pm.collectionVariables.set(\"exerciseId\", jsonData._id || jsonData.id);",
          "}",
          "",
          "// Pour la cr√©ation de workouts - sauvegarder l'ID",
          "if (pm.response.code === 201 && pm.request.url.toString().includes('/workouts')) {",
          "    var jsonData = pm.response.json();",
          "    pm.collectionVariables.set(\"workoutId\", jsonData._id || jsonData.id);",
          "}"
        ]
      }
